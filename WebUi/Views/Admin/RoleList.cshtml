@model IEnumerable<IdentityRole>




<div class="row">
    <div class="col-md-12">
    <h1>Role List </h1>
         <hr>
        <a class="btn btn-warning" asp-controller="Admin" asp-action="RoleCreate"  ><i class="fa-solid fa-cart-plus"></i>Create Role</a>
        <a asp-controller="admin" asp-action="ProductCreate" class="btn btn-warning"><i class="fa-solid fa-cart-plus"></i>Add Product</a>     
        <a asp-controller="admin" asp-action="CategoryCreate" class="btn btn-warning"><i class="fa-solid fa-cart-plus"></i>Add Category</a>               
        <table  class="table table-bordered mt-2">
            <thead>
                <tr>
                    <td style="width: 250px;">
                        Id
                    </td>
                    <td style="width: 100px;">
                        Role Name
                    </td>
                    <td>
                        Name
                    </td>
                     <td style="width: 100px;">
                        Normalized Name
                    </td>
                    <td style="width: 150px;">
                    </td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count()>0)
                {
                       @foreach (var item in Model)
                {
                     <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.NormalizedName
                    </td>
                    <td>
                        <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm mr-2"><i class="fa-solid fa-pen-to-square"></i>Edit</a>

                        <form action="/admin/role/delete" method="post" style="display: inline;">
                            <input type="hidden" name="roleId" value="@item.Id">
                              <button type="submit" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i>Delete</button>
                        </form>

                       
                    </td>
                      </tr>
                }
                }
                else{
                    <div class="alert alert-warning">
                        <h3>NO ROLES</h3>
                    </div>
                }
             
            </tbody>
        </table>
    </div>
</div>




@section Scripts{
    <script src="/node/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/node/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}