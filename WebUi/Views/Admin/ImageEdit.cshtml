@model ImgEditModel
<hr>
<h1 class="h3">Upload</h1>
<hr>
<div class="card mb-3" style="max-width: 540px;">
        
        
<div class="card mb-3">
  <img src="~/img/@Model.imageUrl" class="card-img-top img-fluid" alt="@Model.imageUrl">
  <div class="card-body">
    <h5 class="card-title h-5">@Model.imageUrl</h5>
    <hr>
    <div>
         <form asp-controller="Admin" asp-action="ImageEdit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-group input-group-sm mb-3">
            <span asp-validation-for="colorName" class="input-group-text" id="inputGroup-sizing-sm">Color Name</span>
            <input asp-for="colorName" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="input-group input-group-sm mb-3">
            <span asp-validation-for="colorCode" class="input-group-text" id="inputGroup-sizing-sm">Color Code</span>
            <input asp-for="colorCode" type="color" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
            </div>
        <hr>
        <button type="submit" class="form-group btn btn-outline-primary d-block w-100">Submit</button>
        </form>
    </div>
    <p class="card-text">çok küçük resim yüklemeyiniz</p>
    <p class="card-text"><small class="text-muted">merturkgil@gmail.com</small></p>
  </div>
</div>